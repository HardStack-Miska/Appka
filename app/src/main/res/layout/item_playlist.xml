<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/ivPlaylistCover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/placeholder"
        android:contentDescription="@string/playlist_cover"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPlaylistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/black_or_white"
        android:textSize="16sp"
        android:fontFamily="@font/ys_display_medium"
        app:layout_constraintEnd_toEndOf="@id/ivPlaylistCover"
        app:layout_constraintStart_toStartOf="@id/ivPlaylistCover"
        app:layout_constraintTop_toBottomOf="@id/ivPlaylistCover"
        tools:text="My playlist" />

    <TextView
        android:id="@+id/tvTrackCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/gray_or_black"
        android:textSize="14sp"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintEnd_toEndOf="@id/ivPlaylistCover"
        app:layout_constraintStart_toStartOf="@id/ivPlaylistCover"
        app:layout_constraintTop_toBottomOf="@id/tvPlaylistName"
        tools:text="3 трека" />

</androidx.constraintlayout.widget.ConstraintLayout>
